{
  "manifest_version": 3,
  "name": "Intellify - Real-time Sign Language Translator",
  "version": "1.0.0",
  "description": "Captures YouTube captions and shows real-time sign language video translation",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Intellify Sign Language Translator"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
